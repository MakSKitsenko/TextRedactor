<UserControl x:Class="Redactor.MenuRedact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        mc:Ignorable="d"
       d:disignHeight="300" d:DesignWidth="300">

    <Menu>
    <MenuItem Header="_Файл">
        <MenuItem Header= "_Новый" x:Name="New"/>
        <MenuItem Header= "_Открыть" x:Name="Open"/>
        <MenuItem Header= "_Сохранить" x:Name="Save"/>
        <MenuItem Header= "_Сохранить как" x:Name="SaveAs"/>
        <Separator/>
        <MenuItem Header= "_Печать" x:Name="Print"/>
        <Separator/>
        <MenuItem Header= "_Закрыть" x:Name="Close"/>
    </MenuItem>
    <MenuItem Header="_Правка" Width="62">
        <MenuItem Header= "_Отменить" x:Name="Undo"/>
        <MenuItem Header= "_Повторить" x:Name="Redo"/>
        <Separator/>
        <MenuItem Header= "_Вырезать" x:Name="Cut"/>
        <MenuItem Header= "_Вставить" x:Name="Paste"/>
        <MenuItem Header= "_Копировать" x:Name="Copy"/>
        <MenuItem Header= "_Очистить" x:Name="Delete"/>
        </MenuItem>

    <MenuItem Header="_Помощь">
        <MenuItem Header= "_О программе" x:Name="About"
                      Click="About_Click"/>
    </MenuItem>
    </Menu>
</UserControl>
